#use C-j and C-f for the prefix
unbind C-b
set-option -g prefix C-a
set-option -g prefix2  C-p

#config reload
bind-key r source-file ~/.tmux.conf \; display-message "tmux config successfully reloaded"

#Mouse mode
set -g mouse on

# split panes using | and -
bind | split-window -h
bind - split-window -v
unbind '"'
unbind %

# switch panes using Alt-arrow without prefix
bind -n M-Left select-pane -L
bind -n M-Right select-pane -R
bind -n M-Up select-pane -U
bind -n M-Down select-pane -D

#reorder windows
bind-key -n C-S-Left swap-window -t -1
bind-key -n C-S-Right swap-window -t +1


# don't rename windows automatically
set-option -g allow-rename off

# clock mode
setw -g clock-mode-colour yellow

#Shift + arrow to switch windows
bind -n S-Left previous-window
bind -n s-Right next-window

bind-key -T copy-mode-vi v send-keys -X begin-selection
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "pbcopy"
bind P paste-buffer

#change tmux bg
set -g window-style 'fg=colour247,bg=colour236'
set -g window-active-style 'fg=colour250,bg=black'
set -g pane-border-style 'fg=cyan'
set -g pane-active-border-style 'fg=orange'

setw -g window-status-current-style 'fg=black bg=green'
setw -g window-status-current-format ' #I #W #F '

setw -g window-status-style 'fg=green bg=black'
setw -g window-status-format ' #I #[fg=white]#W #[fg=yellow]#F '

###  Tmux Package Manager(TPM)   ###
# List of plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-resurrect'
#set -g @plugin 'egel/tmux-gruvbox'
# set desired theme options...
#set -g @tmux-gruvbox 'dark256'
#set -g @plugin "nordtheme/tmux"
#set -g @plugin 'dracula/tmux'
#set -s default-terminal 'tmux-256color'

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'
